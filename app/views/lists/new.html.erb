<div class="body">
  <%= render 'components/banner-new' %>

  <div class="container py-4">
    <div class="flr col-12 col-md-6 offset-lg-3 mb-4">
      
        <h3>Create a new list</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'SCI-FI' %>
          <%= f.input :photo %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
   
    </div>
  </div>
</div>